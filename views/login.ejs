<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<title>Login</title>
    <link href="css/styleProfile.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
<link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Love+Ya+Like+A+Sister&family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Love Ya Like A Sister', cursive;
        }
        </style>
</head>
<body>
    <div class="container">

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
                <h1 class="text-center"> Login</h1>
                <img src="/img/login_logo.png" height="150px"  class="rounded mx-auto d-block" onclick="document.location='/'"/>
            <form action="/login" method="post">
                    <input type="text" placeholder="User" class="form-control" name="username">
                    <input type="password" placeholder="Enter password" class="form-control" name="password">

                <div><button type="submit" class="btn">Login</button></div>
            </form>
            <p>Need an account? <button onclick="document.location='/signup'" class="btn">Signup</button></p>
            <span>Or go to <button onclick="document.location='/'" class="btn">Main Page</button></span>
    </div>
        
</body>
</html>
